<div class="col-12 justify-content-center">
  <%= form_with(url: login_path, scope: :session, local: true) do |form| %>
  <div class="row">
    <div class="text-danger">
      <%= flash[:danger] %>
    </div>
  </div>
  <div class="actions">
    <div class="row">
      <div class="col-2">
        <%= form.label :email %>
      </div>
      <div class="col-10">
        <%= form.email_field :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-2">
        <%= form.label :password %>
      </div>
      <div class="col-10">
        <%= form.password_field :password %>
      </div>
    </div>
    <%= form.submit "Log in"%>
  </div>
  <% end %>
</div>
